<Application x:Class="BetrayalApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BetrayalApp"
             xmlns:converters="clr-namespace:BetrayalApp.Converters"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            
            <converters:NullToVisibilityConverter
                x:Key="NullToVisibilityConverter" />

            <converters:NullToInverseVisibilityConverter
                x:Key="NullToInverseVisibilityConverter" />

            <converters:BoolToVisibilityConverter
                x:Key="BoolToVisibilityConverter" />

            <converters:ValueToBoolConverter
                x:Key="ValueToBoolConverter" />

        </ResourceDictionary>
    </Application.Resources>
    
</Application>
